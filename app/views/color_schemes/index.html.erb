<p id="notice"><%= notice %></p>

<h1>Color Schemes</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @color_schemes.each do |color_scheme| %>
      <tr>
        <td><%= color_scheme.name %></td>
				<td><%= color_scheme.colorOne %></td>
				<td><%= color_scheme.colorTwo %></td>
				<td><%= color_scheme.colorThree %></td>
        <td><%= link_to 'Show', color_scheme %></td>
        <td><%= link_to 'Edit', edit_color_scheme_path(color_scheme) %></td>
        <td><%= link_to 'Destroy', color_scheme, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Color Scheme', new_color_scheme_path %>
